<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recorrido Interactivo</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div id="overlay"></div>

    <!-- Barra de navegaci칩n -->
    <nav id="navbar">
        <h1>Mi Plataforma</h1>
        <button id="logout">Salir</button>
    </nav>

    <!-- Contenido Principal -->
    <main>
        <section id="dashboard">
            <h2>Bienvenido al Dashboard</h2>
            <p>Aqu칤 puedes ver tus proyectos recientes.</p>
        </section>

        <section id="editor">
            <h2>Editor</h2>
            <p>Usa esta secci칩n para crear nuevos dise침os.</p>
        </section>

        <section id="config">
            <h2>Configuraci칩n</h2>
            <p>Modifica tus preferencias aqu칤.</p>
        </section>
    </main>

    <div id="tooltip"></div>

    <script src="script.js"></script>

</body>
</html>



<style>

body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    text-align: center;
}

nav {
    background: #3498db;
    padding: 15px;
    color: white;
}

main {
    padding: 20px;
}

section {
    margin: 20px;
    padding: 20px;
    border: 2px solid #ddd;
    border-radius: 10px;
    display: inline-block;
    width: 30%;
}

/* 游댠 Resaltado din치mico */
.highlight {
    position: relative;
    border: 3px solid #f39c12 !important;
    box-shadow: 0px 0px 15px rgba(243, 156, 18, 0.7);
    transition: all 0.3s ease-in-out;
}

/* Tooltip */
#tooltip {
    position: absolute;
    background: #000;
    color: #fff;
    padding: 10px;
    border-radius: 5px;
    display: none;
}

/* Fondo oscuro para el recorrido */
#overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    display: none;
}


</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    const steps = [
        { id: "dashboard", text: "Aqu칤 puedes ver tus proyectos recientes." },
        { id: "editor", text: "Este es el editor donde puedes trabajar en tus ideas." },
        { id: "config", text: "En configuraci칩n puedes cambiar tus preferencias." }
    ];

    let stepIndex = 0;
    const overlay = document.getElementById("overlay");
    const tooltip = document.getElementById("tooltip");

    function showStep(index) {
        if (index >= steps.length) {
            overlay.style.display = "none";
            tooltip.style.display = "none";
            return;
        }

        overlay.style.display = "block";

        const step = steps[index];
        const element = document.getElementById(step.id);
        
        element.classList.add("highlight");

        const rect = element.getBoundingClientRect();
        tooltip.style.display = "block";
        tooltip.style.top = `${rect.top + window.scrollY - 40}px`;
        tooltip.style.left = `${rect.left + rect.width / 2}px`;
        tooltip.innerText = step.text;

        setTimeout(() => {
            element.classList.remove("highlight");
            showStep(index + 1);
        }, 2000);
    }

    setTimeout(() => {
        showStep(stepIndex);
    }, 1000);
});


</script>